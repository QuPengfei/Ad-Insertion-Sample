    visualizer:
        image: dockersamples/visualizer:stable
        ports:
            - "8081:8080"
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
        networks:
            - mynet1
        deploy:
            placement:
                constraints: [node.labels.ad-insert-manager == true]

